{% extends 'base.html.twig' %}

{% block title %}Mes animaux{% endblock %}

{% block body %}
<div class="row">
{% for pet in user.pets if user.pets %}
<div class="card">
       <div class="card-header">
        {% if pet.type.name == 'Chien' %}<i class="fas fa-dog"></i>
        {% else %}
        <i class="fas fa-cat"></i>
        {% endif %}
         {{ pet.name }} 
       
        </div>
        <div class="card-body">
        <ul>
            <li>Date de naissance : {{ pet.birthday|date('d/m/Y')}}</li>
            <li>Sexe : {{ pet.sexe.name }}</li>
            <li>Date d'adoption : {% if  pet.adoptDate is empty %} <em>A renseigner</em> {% else %}
               {{ pet.adoptDate|date('d/m/Y')}}</li>
            {% endif %}
          
            <li>Identification (puce/tatouage) : {% if pet.numberPuce %}{{pet.numberPuce}} {% else %}
                <em>Aucune</em>{% endif %}
            </li>
            <li>Stérilisé : {% if pet.sterilisy == true %}Oui {% else %}Non{% endif %}
            </li>
            <li>Dernier vaccin : </li>
        </ul>
        </div>
        <div class="card-footer text-muted">
         <a href="{{ path('pet_show', { id : pet.id }) }}">Modifier</a><a href="">Supprimer</a>
        </div>
</div>
{% else %}
    <h1>Vous n'avez pas encore enregistré d'animal</h1>

{% endfor %}
</div>
{% endblock %}
